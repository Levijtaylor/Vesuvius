<UserControl x:Class="Vesuvius.UI.CustomControls.UserButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vesuvius.UI.CustomControls"
             mc:Ignorable="d" Height="51.823" Width="159.055">
    <Grid>
        <Button Background="Transparent" x:Name="btnUserButton" BorderThickness="0">
            <Canvas>
                <Image x:Name="userImage" Height="30" Width="33" Canvas.Left="-71" Canvas.Top="-12" Source="/Images/user.png"/>
                <Label x:Name="lblUserName" Content="{Binding UserName}" FontSize="12" Canvas.Left="-21" Canvas.Top="-12" Height="30" Width="97"/>
            </Canvas>
        </Button>

    </Grid>
</UserControl>
